{% extends 'base.html.twig' %}

{% block title %}Muscle Groups!{% endblock %}

{% block body %}
    <style>
        body {
            background-color: #F1F8E8;
            font: 18px/1.5 Monaco;
        }

        .example-wrapper {
            padding-top: 3em;
            margin: 1em auto;
            max-width: 800px;
            width: 95%;

        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }

        table {
            max-width: 100vw;
            border-collapse: collapse;
            border-radius: 7px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);

        }

        th {
            border-bottom: 2px solid black;
            background-color: #55AD9B !important;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        tr:hover {
            --bs-table-hover-color: #55AD9B;
        }


        .button-group {
            display: flex;
            gap: 10px;
        }

        .button-group button {
            padding: 5px 10px;
            cursor: pointer;
        }

        .nav-item {
            text-decoration: none;
            color: #e0e0e0;
            font-size: 20px;
        }

        .addButton {
            position: relative;
            width: 150px;
            height: 40px;
            cursor: pointer;
            display: flex;
            align-items: center;
            border: 1px solid #55AD9B;
            background-color: #95D2B3;
            text-decoration: none;
            font-size: 20px;
            border-radius: 5px;
        }

        .addButton, .button__icon, .button__text {
            transition: all 0.3s;
        }

        .addButton .button__text {
            transform: translateX(30px);
            color: #fff;
            font-weight: 600;
        }

        .addButton .button__icon {
            position: absolute;
            transform: translateX(109px);
            height: 100%;
            width: 39px;
            background-color: #55AD9B;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .addButton .svg {
            width: 30px;
            stroke: #fff;
        }

        .addButton:hover {
            background: #55AD9B;
        }

        .addButton:hover .button__text {
            color: transparent;
        }

        .addButton:hover .button__icon {
            width: 148px;
            transform: translateX(0);
        }

        .addButton:active .button__icon {
            background-color: #55AD9B;
        }

        .addButton:active {
            border: 1px solid #55AD9B;
        }

    </style>

    <nav class="navbar navbar-expand-lg bg-body-tertiary" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="/imgs/Inverted_LogoSmartWorkout.png" alt="Logo" width="100">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item ms-3">
                        <a class="nav-link active" aria-current="page" href="/muscleList">Exercises</a>
                    </li>
                    <li class="nav-item ms-3">
                        <a class="nav-link " href="/workoutsList">Workouts Log</a>
                    </li>
                </ul>
            </div>
            <div class="ml-auto">
                <a href="/login" class="btn btn-outline-warning">Log In</a>
                <a href="/user/register" class="btn btn-outline-light">Register</a>
            </div>
        </div>
    </nav>

    <div class="example-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-9">
                    <h1>Muscle Groups</h1>
                </div>
                <div class="col-3 d-flex justify-content-end">
                    <a href="/muscle" class="addButton">
                        <span class="button__text">Add</span>
                        <span class="button__icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" viewBox="0 0 24 24" stroke-width="2" stroke-linejoin="round" stroke-linecap="round" stroke="currentColor" height="24" fill="none" class="svg"><line y2="19" y1="5" x2="12" x1="12"></line><line y2="12" y1="12" x2="19" x1="5"></line></svg></span>
                    </a>
                </div>
            </div>
        </div>

        <table class="table table-hover table-striped">
            <thead>
            <tr>
                <th>Index</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for muscle in muscles %}
                <tr>
                    <td>{{ muscle.id }}</td>
                    <td>{{ muscle.name }}</td>
                    <td>
                        <div class="button-group">
                            <form action="{{ path('show_exercises', { 'id': muscle.id }) }}">
                                <button class="btn btn-outline-info">
                                    Exercises
                                </button>
                            </form>
                            <form action="{{ path('delete_muscle', { 'id': muscle.id }) }}" method="delete">
                                <button class="btn btn-outline-danger">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <script>
        function ShowExercises(id) {
            console.log('show', id);
        }

        function deleteMuscle(id) {
            console.log('delete', id);
        }
    </script>
{% endblock %}