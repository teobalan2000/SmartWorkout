{% extends 'base.html.twig' %}

{% block title %}Register User{% endblock %}

{% block body %}
    <style>
        body {
            background-color: #F1F8E8;
            font: 18px/1.5 Monaco;
        }

        .example-wrapper {
            padding-top: 3em;
            margin: 1em auto;
            max-width: 800px;
            width: 95%;

        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }

        table {
            max-width: 100vw;
            border-collapse: collapse;
            border-radius: 7px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);

        }

        th {
            border-bottom: 2px solid black;
            background-color: #55AD9B !important;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        tr:hover {
            --bs-table-hover-color: #55AD9B;
        }


        .button-group {
            display: flex;
            gap: 10px;
        }

        .button-group button {
            padding: 5px 10px;
            cursor: pointer;
        }

        .nav-item {
            text-decoration: none;
            color: #e0e0e0;
            font-size: 20px;
        }

    </style>

    <nav class="navbar navbar-expand-lg bg-body-tertiary" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="/imgs/Inverted_LogoSmartWorkout.png" alt="Logo" width="100">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item ms-3">
                        <a class="nav-link" href="/muscleList">Exercises</a>
                    </li>
                    <li class="nav-item ms-3">
                        <a class="nav-link" href="/workoutsList">Workouts Log</a>
                    </li>
                </ul>
            </div>
            <div class="ml-auto">
                <a href="/login" class="btn btn-outline-warning">Log In</a>
                <a href="/user/register" class="btn btn-outline-light">Register</a>
            </div>
        </div>
    </nav>

    <div class="example-wrapper">
        {% form_theme form 'bootstrap_5_layout.html.twig' %}

        {{ form_start(form) }}
        {{ form(form) }}
        {{ form_end(form) }}
    </div>

{% endblock %}
