{% extends 'base.html.twig' %}

{% block title %}Exercises for {{ workout.name }}{% endblock %}

{% block body %}
    <style>
        body {
            background-color: #F1F8E8;
        }

        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 Monaco;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            border-radius: 7px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);

        }

        th {
            border-bottom: 2px solid black;
            background-color: #55AD9B !important;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        tr:hover{
            --bs-table-hover-color: #55AD9B;
        }


        .button-group {
            display: flex;
            gap: 10px;
        }

        .button-group button {
            padding: 5px 10px;
            cursor: pointer;
        }
    </style>

    <div class="example-wrapper">
        <h1>Exercises for {{ workout.name }}</h1>

        <table class="table table-hover table-striped">
            <thead>
            <tr>
                <th>Index</th>
                <th>Name</th>
                <th>Duration</th>
                <th>Sets</th>
                <th>Reps</th>
            </tr>
            </thead>
            <tbody>
            {% for exercise in exercises %}
                <tr>
                    <td>{{ exercise.id }}</td>
                    <td>{{ exercise.exercise.name }}</td>
                    <td>{{ exercise.duration }}</td>
                    <td>{{ exercise.sets }}</td>
                    <td>{{ exercise.reps }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">No exercises found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}