{% extends 'base.html.twig' %}

{% block title %}Exercises for {{ workout.name }}{% endblock %}

{% block body %}
    <style>
        body {
            background-color: #F1F8E8;
            font: 18px/1.5 Monaco;
        }

        .example-wrapper {
            padding-top: 3em;
            margin: 1em auto;
            max-width: 800px;
            width: 95%;

        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }

        table {
            max-width: 100vw;
            border-collapse: collapse;
            border-radius: 7px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);

        }

        th {
            border-bottom: 2px solid black;
            background-color: #55AD9B !important;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        tr:hover {
            --bs-table-hover-color: #55AD9B;
        }


        .button-group {
            display: flex;
            gap: 10px;
        }

        .button-group button {
            padding: 5px 10px;
            cursor: pointer;
        }

        .nav-item {
            text-decoration: none;
            color: #e0e0e0;
            font-size: 20px;
        }

        button {
            position: relative;
            display: inline-block;
            cursor: pointer;
            outline: none;
            border: 0;
            vertical-align: middle;
            text-decoration: none;
            background: transparent;
            padding: 0;
            font-size: inherit;
            font-family: inherit;

        }

        button.back-button {
            width: 12rem;
            height: auto;
        }

        button.back-button .circle {
            transition: all 0.45s cubic-bezier(0.65, 0, 0.076, 1);
            position: relative;
            display: block;
            margin: 0;
            width: 3rem;
            height: 3rem;
            background: #282936;
            border-radius: 1.625rem;
        }

        button.back-button .circle .icon {
            transition: all 0.45s cubic-bezier(0.65, 0, 0.076, 1);
            position: absolute;
            top: 0;
            bottom: 0;
            margin: auto;
            background: #fff;
        }

        button.back-button .circle .icon.arrow {
            transition: all 0.45s cubic-bezier(0.65, 0, 0.076, 1);
            left: 1.2rem;
            width: 1.2rem;
            height: .125rem;
            background: none;
        }

        button.back-button .circle .icon.arrow::before {
            position: absolute;
            content: "";
            top: -0.25rem;   /* Keeps it vertically aligned with the middle */
            left: 0rem; /* Position it from the left instead of right */
            width: 0.625rem;
            height: 0.625rem;
            border-top: 0.125rem solid #fff;    /* Same size but change direction */
            border-left: 0.125rem solid #fff;   /* Use border-left instead of border-right */
            transform: rotate(-50deg);         /* Rotate it to point left */
        }

        button.back-button .button-text {
            transition: all 0.45s cubic-bezier(0.65, 0, 0.076, 1);
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            padding: 0.75rem 0;
            margin: 0 0 0 1.85rem;
            color: #282936;
            font-weight: 700;
            line-height: 1.6;
            text-align: center;
            text-transform: uppercase;
        }

        button:hover .circle {
            width: 100%;
        }

        button:hover .circle .icon.arrow {
            background: #fff;
            transform: translate(0rem, 0);
            left: 3rem;
        }

        button:hover .button-text {
            color: #fff;
        }

    </style>


    <div class="example-wrapper">
        <h1>Exercises for {{ workout.name }}</h1>

        <table class="table table-hover table-striped">
            <thead>
            <tr>
                <th>Index</th>
                <th>Name</th>
                <th>Duration</th>
                <th>Sets</th>
                <th>Reps</th>
                <th>Weight</th>
            </tr>
            </thead>
            <tbody>
            {% for exercise in exercises %}
                <tr>
                    <td>{{ exercise.id }}</td>
                    <td>{{ exercise.exercise.name }}</td>
                    <td>{{ exercise.duration }}</td>
                    <td>{{ exercise.sets }}</td>
                    <td>{{ exercise.reps }}</td>
                    <td>{{ exercise.weight }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">No exercises found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <button onclick="window.history.back();" class="back-button">
            <span class="circle" aria-hidden="true">
            <span class="icon arrow"></span>
            </span>
            <span class="button-text">Back</span>
        </button>
    </div>
{% endblock %}