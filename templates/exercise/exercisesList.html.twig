{% extends 'base.html.twig' %}

{% block title %}Exercises!{% endblock %}

{% block body %}
    <style>
        body {
            background-color: #F1F8E8;
        }

        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 Monaco;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            border-radius: 7px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        th {
            border-bottom: 2px solid black;
            background-color: #55AD9B !important;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        tr:hover{
            --bs-table-hover-color: #55AD9B;
        }


        .button-group {
            display: flex;
            gap: 10px;
        }

        .button-group button {
            padding: 5px 10px;
            cursor: pointer;
        }
    </style>

    <div class="example-wrapper">
        <h1>Exercises</h1>

        <table class="table table-hover table-striped">
            <thead>
            <tr>
                <th>Index</th>
                <th>Name</th>
                <th>Muscle group</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for exercise in exercises %}
                <tr>
                    <td>{{ exercise.id }}</td>
                    <td>{{ exercise.name }}</td>
                    <td>{{ exercise.getMuscleGroup().getName() }}</td>
                    <td>
                        <div class="button-group">
                            <form action="{{ path('edit_exercise', { 'id': exercise.id }) }}">
                                <button class="btn btn-outline-warning">
                                    Edit
                                </button>
                            </form>
                            <form action="{{ path('delete_exercise', { 'id': exercise.id }) }}" method="delete">
                                <button class="btn btn-outline-danger">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <script>
        function editExercise(id) {
            console.log('edit', id);
        }

        function deleteExercise(id) {
            console.log('delete', id);
        }
    </script>
{% endblock %}